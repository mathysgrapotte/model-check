include { GENERATE_FASTA } from '../modules/generate_fasta.nf'

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    RUN MAIN WORKFLOW
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

workflow HANDLE_FASTA {

    main:

    fasta = ''
    if (params.input_fasta) {
        fasta = params.input_fasta
    } else {
        fasta = GENERATE_FASTA()
    }


    emit:

    fasta

}


